<div class="row">
    <div class="kl-content-prof">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title text-center"></h3>
            </div>

            <div class="kl-content-show">
                <div class="col-md-4 kl-container-user-photo">
                    {% if user.usrPhoto %}
                        <img src="{{ user.usrPhoto }}"  class="kl-user-image" width="150" height="150" alt="{{ user.usrFullname }}">
                    {% else %}
                        <i class="fa fa-user fa-5x"></i>
                    {% endif %}
                </div>
                <div class="col-md-6">
                    <p>{{ 'bo.user.show.fullname'| trans }}: <span>{{ user.usrFullName }}</span></p>
                    <p>{{ 'bo.user.show.email'| trans }}: <span>{{ user.email }}</span></p>
                    <p>{{ 'bo.user.telephone'| trans }}: <span>{{ user.usrPhone }}</span></p>
                    <p>{{ 'bo.user.show.adresse'| trans }}: <span>{{ user.usrAddress }}</span></p>
                </div>
            </div>
        </div>
    </div>
</div>
